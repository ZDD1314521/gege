    <bean id="espressoBean" class="edu.soft2.coffee.EspressoBean">
            <property name="flavor"><value>(意大利)浓缩咖啡</value></property>
    </bean>

    <bean id="mocaBean" class="edu.soft2.coffee.MocaCoffee">
    <property name="flavor"><value>摩卡咖啡</value></property>
    </bean>

    <bean id="coffeeMachine" class="edu.soft2.coffee.CoffeeMachine">
        <property name="color" value="红"></property>
<!--    <property name="coffeeBean" ref="mocaBean"></property>-->
        <property name="coffeeBean">
            <bean id="MocaBean" class="edu.soft2.coffee.MocaCoffee">
            <property name="flavor" value="摩卡"></property>
            </bean>
        </property>
    </bean>



    <context:annotation-config/>
    <!--开启注解扫描，框架会自动扫描-->
    <context:component-scan base-package="edu.soft2"/>
    <!--开启aop注解，使得java类的aop注解生效-->
    <aop:aspectj-autoproxy/>
    <!--开启代理-->
    <aop:aspectj-autoproxy proxy-target-class="true"/>

